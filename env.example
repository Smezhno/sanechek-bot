# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Bot username (without @)
BOT_USERNAME=sanechek_bot

# OpenAI API Key (optional, for OpenAI/x.ai)
OPENAI_API_KEY=
OPENAI_BASE_URL=
OPENAI_MODEL=gpt-4o-mini

# YandexGPT (preferred if configured)
YANDEX_GPT_API_KEY=your_yandex_api_key_here
YANDEX_FOLDER_ID=your_folder_id_here

# Initial admin Telegram user IDs (comma-separated)
INITIAL_ADMINS=123456789

# Timezone (default: UTC+10)
TIMEZONE=Asia/Vladivostok

# Summary time (24h format, default: 12:00)
SUMMARY_TIME=12:00

# Database path
DATABASE_URL=sqlite+aiosqlite:///./sanechek.db

